<div class="container">
  <div class="row">
    <%= render 'layouts/sidebar', user: current_user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
      <div class="row">
        <h2 class="my-4">Books</h2>
        <%= render 'layouts/search' %>
      </div>
      <div class="row">
        <div class="card-deck w-100">
          <% @books.each do |book| %>
            <div class="col-4 mb-5">
              <div class="card shadow h-100">
                <%= link_to book_path(book) do %>
                  <%= image_tag book.get_image(182,182), class:"bd-placeholder-img card-img-top", style:"width: 100%; height: 200px;" %>
                <% end %>
                <div class="card-body">
                  <p class="favorite_btn_partial_<%= book.id %>"><%= render 'layouts/favorite_btn', book: book %></p>
                  <p class="card-title">
                    <strong>Title: <%= book.title %></strong>
                  </p>
                  <p class="card-text">
                    Opinion: <%= book.body %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row my-5">
        <%= paginate @books%>
      </div>
    </div>
  </div>
</div>