<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
    <h2 class="mt-3">User edit</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました。
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <%= form_with model: @user do |f| %>
      <div class="form-group">
        <%= f.file_field :profile_image, accept: '*/image' %>
      </div>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :introduction %><br>
        <%= f.text_field :introduction %>
      </div>
      <div class="form-group">
        <%= f.label :postcode %><br>
        <%= f.text_field :postcode %>
      </div>
      <div class="form-group">
        <%= f.label :address %><br>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User", class:"btn btn-info" %>
      </div>

    <% end %>
    <%= link_to "Show", user_path(@user) %> |
    <%= link_to "Back", books_path %>
    </div>
  </div>
</div>