<div class="container">
  <div class="row">
    <%= render 'layouts/sidebar', user: current_user, book: @new_book %>
    <div class="col-md-8 offset-md-1">
    <h2 class="mt-3">Books</h2>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user_path(user) do %>
                <%= image_tag user.get_profile_image(80,80) %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td>
              <% if user == current_user %>
              <% elsif current_user.following?(user) %>
                <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class:"btn btn-sm mx-auto btn-danger" %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class:"btn btn-sm mx-auto btn-success" %>
              <% end %>
            </td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>