<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.file_field :image, accept:"image" %>
        </div>
        <div class="form-group">
          <%= f.submit "グループを更新", class:"btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>